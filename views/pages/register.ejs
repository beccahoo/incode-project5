<%- include ('../partials/head') %> 
<div class = "loginwrapper">

    <div class="logincontainer">
        <form class="form" id="createAccount" action ="/register" method="post">
            <h1 class="form__title">Create Account</h1>
            <% if(typeof errMsgs !== 'undefined'){ %>
                <% errMsgs.forEach(error=> {%>
                    <p><%=error.msg%></p>
                    
                <%});%>
            <%}%>
            <%if(typeof passwordError !== 'undefined'){%>
                <p style="color:red; font-size: 24px;text-align: center;"><%= passwordError%> </p>
            <%}%>
            <div class="form__message form__message--error"></div>
            <div class="form__input-group">
                <input type="text" class="form__input" placeholder="Firstname" name="firstname" name>
                <div class="form__input-error-message"></div>
            </div>
            <div class="form__input-group">
                <input type="text" class="form__input" placeholder="Lastname" name="lastname" name>
                <div class="form__input-error-message"></div>
            </div>
            <div class="form__input-group">
                <input type="text" class="form__input" autofocus placeholder="Email Address" name="email">
                <div class="form__input-error-message"></div>
            </div>
            <div class="form__input-group">
                <input type="password" name="password" class="form__input" autofocus placeholder="Password">
                <div class="form__input-error-message"></div>
            </div>
            <div class="form__input-group">
                <input type="password" name="password1" class="form__input" autofocus placeholder="Confirm password">
                <div class="form__input-error-message"></div>
            </div>
            <button class="form__button" type="submit">Continue</button>
            <p class="form__text">
                <a href="/login">Already have an account? Sign in</a>
            </p>
        </form>
    </div>
</div>