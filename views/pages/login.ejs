<%- include ('../partials/head') %> 

<body>
<div class = "loginwrapper">
  <div class="logincontainer">
    <%if(typeof errMsg !== 'undefined'){%>
        <p style="color:red; font-size: 24px;text-align: center;"><%= errMsg%> </p>
    <%}%>
        <form class="form" id="login" action="/login" method="post">
            <h1 class="form__title">Login</h1>
            <% if(typeof message !== 'undefined'){ %>
                <p><%=message%></p>
            <%}%>
            <% if(typeof errMsgs !== 'undefined'){ %>
                <% errMsgs.forEach(error=> {%>
                    <p><%=error.msg%></p>
                    
                <%});%>
            <%}%>
            <% if(typeof successMsgs !== 'undefined'){ %>
                <% successMsgs.forEach(success=> {%>
                    <p><%=success.msg%></p>
                    
                <%});%>
            <%}%>
            <div class="form__message form__message--error"></div>
            <div class="form__input-group">
                <input type="text" name="email" class="form__input" autofocus placeholder="Email">
                <div class="form__input-error-message"></div>
            </div>
            <div class="form__input-group">
                <input type="password" name="password" class="form__input" autofocus placeholder="Password">
                <div class="form__input-error-message"></div>
            </div>
            <button class="form__button" type="submit">Continue</button>
            <p class="form__text">
                <a href="/forgotpassword" class="form__link">Forgot your password?</a>
            </p>
            <p class="form__text">
                <a class="form__link" href='/register'>Don't have an account? Create account</a>
            </p>
        </form>
       
    </div>
